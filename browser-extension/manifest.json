{
  "manifest_version": 3,
  "name": "ClickFix Mitigator",
  "version": "0.1.0",
  "description": "Detecta patrones de ClickFix y discrepancias de portapapeles.",
  "permissions": [
    "storage",
    "notifications",
    "clipboardRead",
    "clipboardWrite",
    "alarms"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "ui/popup.html",
    "default_title": "ClickFix Mitigator",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "options_ui": {
    "page": "ui/options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
  
}
